{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./out",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["vscode", "node"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
